<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">#1B4332</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextButton" parent="@android:style/Widget.Button">
        <item name="android:textScaleX">1.5</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1B4332</item>
    </style>

    <style name="TextBig">
        <item name="android:textColor">#2D6A4F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall">
        <item name="android:foregroundTint">#52B788</item>
        <item name="android:textSize">25dp</item>
        <item name="backgroundTint">#1B4332</item>
        <item name="android:textColor">#40916C</item>

    </style>

    <style name="BrandedCheckBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


</resources>